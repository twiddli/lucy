{
  "$schema": "https://json.schemastore.org/package",
  "name": "lucy-maid",
  "displayName": "Lucy Maid",
  "description": "A general purpose helper",
  "version": "1.3.0",
  "publisher": "twiddly",
  "repository": {
    "url": "https://github.com/twiddli/lucy"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.code-workspace"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "lucy.sessionInterval": {
          "type": "number",
          "scope": "application",
          "default": 100,
          "description": "Minimum window duration in minutes after inactvity before a new coding session can begin"
        }
      }
    },
    "commands": [
      {
        "command": "lucy.remind",
        "title": "Lucy: Remind me to...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.remindFile",
        "title": "Lucy: Remind me something about this file...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.remindInFile",
        "title": "Lucy: Remind me something about this line in this file...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.reminderDelete",
        "title": "Lucy: Delete reminder",
        "icon": {
          "dark": "media/trash.svg",
          "light": "media/trash_l.svg"
        }
      },
      {
        "command": "lucy.reminderClear",
        "title": "Lucy: Clear reminder",
        "icon": {
          "dark": "media/check.svg",
          "light": "media/check_l.svg"
        }
      },
      {
        "command": "lucy.reminderClearAll",
        "title": "Lucy: Clear all reminders",
        "icon": {
          "dark": "media/check-all.svg",
          "light": "media/check-all_l.svg"
        }
      },
      {
        "command": "lucy.reminderShow",
        "title": "Lucy: Show reminder"
      },
      {
        "command": "lucy.variables.source",
        "title": "Lucy: Set variables source",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.variables.refresh",
        "title": "Lucy: Refresh variables"
      },
      {
        "command": "lucy.variables.refresh.title",
        "title": "Refresh"
      },
      {
        "command": "lucy.variables.show",
        "title": "Lucy: Show all variables"
      },
      {
        "command": "lucy.variables.show.title",
        "title": "Show all"
      },
      {
        "command": "lucy.variables.set.hidden",
        "title": "Lucy: Hide a variable"
      },
      {
        "command": "lucy.variables.set.type.color",
        "title": "Lucy: Set variable as color type"
      },
      {
        "command": "lucy.variables.set.type.color.all",
        "title": "Lucy: Set all variables as color type"
      },
      {
        "command": "lucy.variables.set.type.color.all.title",
        "title": "Set all as color"
      },
      {
        "command": "lucy.variables.set.type.string",
        "title": "Lucy: Set variable as string type"
      },
      {
        "command": "lucy.variables.set.type.string.all",
        "title": "Lucy: Set all variables as string type"
      },
      {
        "command": "lucy.variables.set.type.string.all.title",
        "title": "Set all as string"
      }
    ],
    "views": {
      "lucy": [
        {
          "id": "lucy.reminder",
          "name": "Reminder"
        },
        {
          "id": "lucy.variables",
          "name": "Variables"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lucy",
          "title": "Lucy",
          "icon": "media/girl.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lucy.reminder",
        "contents": "No reminders found.\n[Add Reminder](command:lucy.remind)"
      },
      {
        "view": "lucy.variables",
        "contents": "No variables source set.\n[Set Variables Source](command:lucy.variables.source)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lucy.variables.source",
          "when": "view == lucy.variables",
          "group": "navigation@2"
        },
        {
          "command": "lucy.variables.refresh.title",
          "when": "view == lucy.variables",
          "group": "navigation@1"
        },
        {
          "command": "lucy.variables.show.title",
          "when": "view == lucy.variables",
          "group": "variables@1"
        },
        {
          "command": "lucy.variables.set.type.color.all.title",
          "when": "view == lucy.variables",
          "group": "variables_type"
        },
        {
          "command": "lucy.variables.set.type.string.all.title",
          "when": "view == lucy.variables",
          "group": "variables_type"
        },
        {
          "command": "lucy.remind",
          "when": "view == lucy.reminder",
          "group": "reminder"
        },
        {
          "command": "lucy.reminderClearAll",
          "when": "view == lucy.reminder",
          "group": "reminder"
        }
      ],
      "view/item/context": [
        {
          "command": "lucy.reminderClear",
          "when": "view == lucy.reminder && viewItem =~ /reminderItem/",
          "group": "inline"
        },
        {
          "command": "lucy.reminderDelete",
          "when": "view == lucy.reminder && viewItem =~ /reminderItem/"
        },
        {
          "command": "lucy.variables.set.hidden",
          "when": "view == lucy.variables && viewItem =~ /variable/"
        },
        {
          "command": "lucy.variables.set.type.color",
          "group": "variables_type",
          "when": "view == lucy.variables && viewItem =~ /variable/"
        },
        {
          "command": "lucy.variables.set.type.string",
          "group": "variables_type",
          "when": "view == lucy.variables && viewItem =~ /variable/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "build": "webpack",
    "compile": "webpack",
    "watch": "webpack --watch",
    "create": "yarn package && vsce package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build:test": "tsc",
    "watch:test": "tsc -watch",
    "pretest": "yarn run build:test && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/__tests__/runTest.js",
    "gen:changelog": "git-cliff -o CHANGELOG.md"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^18.18.1",
    "@types/vscode": "~1.53.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "git-cliff": "^1.3.1",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "vscode-test": "^1.6.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "timeago.js": "^4.0.2"
  }
}
