{
  "name": "lucy",
  "displayName": "Lucy",
  "description": "A general purpose helper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "lucy.sessionInterval": {
          "type": "number",
          "scope": "application",
          "default": 180,
          "description": "Minimum window de-focus duration before new coding session (minutes)"
        }
      }
    },
    "commands": [
      {
        "command": "lucy.remind",
        "title": "Lucy: Remind me to...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.remindFile",
        "title": "Lucy: Remind me something about this file...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.remindInFile",
        "title": "Lucy: Remind me something about this line in this file...",
        "icon": {
          "dark": "media/add.svg",
          "light": "media/add_l.svg"
        }
      },
      {
        "command": "lucy.reminderDelete",
        "title": "Delete reminder",
        "icon": {
          "dark": "media/trash.svg",
          "light": "media/trash_l.svg"
        }
      },
      {
        "command": "lucy.reminderClear",
        "title": "Clear reminder",
        "icon": {
          "dark": "media/check.svg",
          "light": "media/check_l.svg"
        }
      },
      {
        "command": "lucy.reminderClearAll",
        "title": "Clear all reminders",
        "icon": {
          "dark": "media/check-all.svg",
          "light": "media/check-all_l.svg"
        }
      },
      {
        "command": "lucy.reminderShow",
        "title": "Show reminder"
      }
    ],
    "views": {
      "lucy": [
        {
          "id": "lucy.reminder",
          "name": "Reminder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lucy",
          "title": "Lucy",
          "icon": "media/girl.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lucy.reminder",
        "contents": "No reminders found.\n[Add Reminder](command:lucy.remind)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lucy.remind",
          "when": "view == lucy.reminder",
          "group": "navigation"
        },
        {
          "command": "lucy.reminderClearAll",
          "when": "view == lucy.reminder",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lucy.reminderClear",
          "when": "view == lucy.reminder && viewItem =~ /reminderItem/",
          "group": "inline"
        },
        {
          "command": "lucy.reminderDelete",
          "when": "view == lucy.reminder && viewItem =~ /reminderItem/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "timeago.js": "^4.0.2"
  }
}
